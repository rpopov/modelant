<!--
  This script demonstrates the usage of <b>diff.db</b> macro to compare two UML 1.3 models treated as reverse engineered database schemas,
  thus treated as different versions of the same schema.<br/><br/>

  Both models should have been result of <b>reverse.db</b> macro.
-->
<project name="build-products" basedir="../..">
  <import file="..\..\..\..\env.xml"/>

  <typedef resource="net/mdatools/modelant/uml13/reverse/antlib.xml"/>

  <property name="new.model" value="${out}/result-new-db.xmi" />
  <property name="old.model" value="${out}/result-old-db.xmi" />

  <echo>
    Identifying the changes in ${new.model} as latest version
    against ${old.model} as a previous version/branch.
  </echo>

  <diff.db new.file="${new.model}"
           old.file="${old.model}"/>
</project>