<!--
  Tasks, types and macros of ModelAnt Template engine.<br/>
  Usage:<br/><br/>

  &lt;typedef resource="net/mdatools/modelant/template/antlib.xml"/&gt;<br/><br/>

  Imports:<br/><br/>

  &lt;typedef resource="net/mdatools/modelant/core/antlib.xml"/&gt;
  -->
<antlib xmlns:current="ant:current">

   <typedef resource="net/mdatools/modelant/core/antlib.xml" />

   <taskdef name="template.init" classname="net.mdatools.modelant.template.task.DeclareTemplateContextTask"/>

   <taskdef name="template" classname="net.mdatools.modelant.template.task.TemplateTask"/>

   <taskdef name="template.compile" classname="net.mdatools.modelant.template.task.CompileTemplateTask"/>
</antlib>