<!--
  This script demonstrates the usage of <b>reverse.xsd</b> macro to reverse engineer an XML schema.

  -->
<project name="build-products" default="reverse" basedir="../..">

  <import file="..\..\..\..\env.xml"/>

  <typedef resource="net/mdatools/modelant/uml13/reverse/antlib.xml"/>

  <!-- Project directory structure -->
  <property name="home"       value="${basedir}" />
  <property name="src"        value="${home}/src" />
  <property name="out"        value="${home}/out" />

  <target name="reverse"
          description="Reverse engineers XSDs">
    <reverse.xsd output="${out}/maven-xsd.xmi">
      <fileset dir="${src}/xsd">
        <include name="maven*.xsd"/>
      </fileset>
    </reverse.xsd>
  </target>
</project>